{
  "name": "mongodb-quota",
  "version": "0.0.5",
  "description": "General-purpose quota management for MongoDB",
  "main": "./dist/index.js",
  "ava": {
    "files": [
      "./tests/*.js",
      "./tests/**/*.js"
    ],
    "concurrency": 1,
    "failFast": true
  },
  "scripts": {
    "clean": "rm -Rf ./dist",
    "prebuild": "npm run clean; mkdir -p ./dist",
    "build": "babel ./src --out-dir ./dist --copy-files",
    "prepublish": "npm run build",
    "pretest": "npm run build",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpepermint/mongodb-quota.git"
  },
  "keywords": [
    "quota",
    "quotas",
    "mongodb",
    "mongo",
    "limit",
    "limites",
    "rate",
    "throttle",
    "throttling"
  ],
  "bugs": {
    "url": "https://github.com/xpepermint/mongodb-quota/issues"
  },
  "author": "Kristijan Sedlak (Xpepermint)",
  "license": "MIT",
  "homepage": "https://github.com/xpepermint/mongodb-quota#readme",
  "devDependencies": {
    "ava": "0.16.0",
    "babel-cli": "6.14.0",
    "babel-preset-node5": "11.1.0",
    "mongodb": "2.2.10"
  },
  "peerDependencies": {
    "mongodb": "2.x.x"
  }
}
